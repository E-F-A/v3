# +---------------------------------------------------+
# Function to determine space needed for update
# +---------------------------------------------------+
function checkspace()
{
  # Get size of database area
  DBSIZE=$(du -c /var/lib/mysql | tail -n 1 | awk '{print $1}')
   
  # Get size of free space /var
  VARSIZE=$(df -P /var | tail -n 1 | awk '{print $4}')

  # Use 2x database size calculation
  # 1 for backup file
  # 1 for update
  if [[ $(($DBSIZE * 2)) -gt $VARSIZE ]]; then
    echo "Aborted:  Free Space on /var is not sufficient for update!"
    echo "Free up space or expand /var and try again."
    abort
  fi
}

