#----------------------------------------------------------------#
# Function where we do all our magic
#----------------------------------------------------------------#
function run_update() {
  echo "Starting update to E.F.A. $VERSION"

  # To package for this update:
  # /EFA-Version-Upgrade                              <- This file in the root, renamed!
  # /Files/                                           <- Directory (containing binary files)
  # /Scripts/                                         <- Directory (containing update scripts (previous git scripts))
  # /Scripts/lib-EFA-Configure                        <- Complete EFA-Configure dir with all files
  # /Scripts/EFA-Configure                            <- EFA-Configure script

  ####### Preflight ######
  checkspace
  
  ##### Backup Phase #####
  /usr/local/sbin/EFA-Backup -backup
  [[ $? -ne 0 ]] && abort

  ##### Commit Phase #####

  # Enter Maintenance Mode
  mv -f /etc/cron.d/EFA-Monitor.cron /var/EFA > /dev/null 2>&1

  YUM_EXCLUDES=$(grep "^exclude=" /etc/yum.conf | awk -F'=' '{print $2}')
  sed -i "/^exclude=/ c\exclude=" /etc/yum.conf

  yum clean all
  yum_update

  # Add init.d symlink back for compatibility
  ln -s /etc/init.d/mailscanner /etc/init.d/MailScanner

  # Issue #388 MailWatch database schema upgrade causing /tmp to fill up
  # Cannot increase tmp size here, so relocate to /var
  mkdir /var/lib/mysql/temp
  chown mysql:mysql /var/lib/mysql/temp
  sed -i "/^\[mysqld\]/ a\tmpdir = /var/lib/mysql/temp" /etc/my.cnf.d/server.cnf
  service mysql reload

  # Update MailWatch
  update-mailwatch

  # Update SGWI
  update_sgwi

  # Update Pyzor
  yum -y install python-setuptools
  update_pyzor

  # Update DCC
  update_dcc

  # Post rpm Update Webmin
  update-webmin

  # Issue #378 Disable mod_security for 3.0.2.4
  sed -i "/^LoadModule security2_module modules\/mod_security2.so/ c\#LoadModule security2_module modules/mod_security2.so" /etc/httpd/conf.d/mod_security.conf
  service httpd restart

  #Issue #376 - Secure loopback access
  dbpwd="`grep MYSQLROOTPWD /etc/EFA-Config | sed 's/^.*://'`"
  /usr/bin/mysql -u root -p"$dbpwd" -e "DELETE FROM mysql.user WHERE User='root' AND Host NOT IN ('localhost');"

  # Post MailScanner upgrade 5.0.6-4 (https://github.com/MailScanner/v5/issues/88)
  chown postfix:mtagroup /var/spool/MailScanner/quarantine
  
  # Enable restart on ms_cron update
  MSCRONPRESENT=$(grep ^ms_cron_ps_restart /etc/MailScanner/defaults)
  if [[ -z $MSCRONPRESENT ]]; then
    cat >> /etc/MailScanner/defaults << EOF

# Restart MailScanner after Update Safe/Bad Phishing sites
#
# Restart MailScanner after update of the Safe/Bad Phishing sites files.
# This is disabled by default.
#
# This is executed during the DAILY cron option.  0 = off, 1 = on
#

ms_cron_ps_restart=1
EOF
  else
    sed -i "/^ms_cron_ps_restart/ c\ms_cron_ps_restart=1" /etc/MailScanner/defaults
  fi

  # Reset Web Bug 1x1 spacer
  sed -i "/^Web Bug Replacement =/ c\Web Bug Replacement = http://dl.efa-project.org/static/1x1spacer.gif" /etc/MailScanner/MailScanner.conf

  # Exit Maintenance Mode
  mv -f /var/EFA/EFA-Monitor.cron /etc/cron.d/ > /dev/null 2>&1
  sed -i "/^exclude=/ c\exclude=$YUM_EXCLUDES" /etc/yum.conf

  # Restore excludes
  sed -i "/^exclude=/ c\exclude=$YUM_EXCLUDES" /etc/yum.conf

  echo "$VERSION update is complete"
  echo ""
  echo "" >> $TMPMAIL
  echo "Update to $VERSION complete." >> $TMPMAIL
}
