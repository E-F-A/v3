clear
red='\E[00;31m'
green='\E[00;32m'
yellow='\E[00;33m'
blue='\E[00;34m'
magenta='\E[00;35'
cyan='\E[00;36m'
clean='\e[00m'

func_echo-header
if [ ! -e /etc/EFA-Config ]
 then
    echo -e "--------------------------------------------------------------"
    echo -e "$green[EFA]$clean We will ask you a few questions to setup this system."
    echo -e "$green[EFA]$clean Please make sure the system is connected to the internet."
    echo -e "--------------------------------------------------------------"
    pause
    func_ask-hostname
    func_ask-domainname
    func_ask-adminemail
    func_ask-ipaddress
    func_ask-netmask
    func_ask-gateway
    func_ask-dns1
    func_ask-dns2
