    func_ask-orgname
    func_ask-greylist
    func_verify-settings
    func_configure-system
    if [[ "$InstallVmwareTools" -eq 1 ]]; then func_Install-VmwareTools; fi
    func_end
 else
    echo -e "$red         ERROR: EFA is already configured $clean"
    echo -e "$red         Please use EFA-Configure $clean"
    echo -e ""
    exit 0
fi
